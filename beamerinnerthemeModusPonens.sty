\mode<presentation>

% Commands --------------------------------------------------------------------
% \email for placing your email on the titlepage
\newcommand\email[1]{%      % \email has one argument
    \newcommand\insertemail{%   % that can be printed out by \insertemail
        \texttt{\href{mailto:#1}{#1}}%
    }
}

% \checkcommand here only employed to check whether \insertemail can be used
\newcommand\checkcommand[1]{%   % checks whether the given command is defined
    \ifdefined#1#1%     % and executes it if it is
    \else\relax%        % otherwise it does not do anything
    \fi%
}

% \ifinstempty used for a different titlepage if no logo/institute is given
\newcommand\ifempty[3]{% if #1 prints no text
    \setbox0=\hbox{#1}\ifdim\wd0=0pt#2% it executes #2
    \else#3% otherwise it executes #3
    \fi%
}


% Beamer Templates ------------------------------------------------------------
% blocks, items and text
\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamertemplate{items}[square]
\setbeamertemplate{sections/subsections in toc}[square]
\linespread{1.12} % more space between lines

% no background
\setbeamertemplate{background}{}

% title page
\setbeamertemplate{title page}{%
    \thispagestyle{empty}%  % no headline nor footer on title page
                % title page header
    \vspace{.4cm}%
    \vbox to 5.3cm{%
    \begin{beamercolorbox}[wd=7.7cm,sep=8pt]{title page header}%
        \raggedleft\usebeamerfont{title}\inserttitle\par%
        \raggedleft\usebeamerfont{subtitle}\insertsubtitle%
    \end{beamercolorbox}%
    \vfil%
    }%
    \makebox[\linewidth]{% different "footline" on the title page
    \begin{beamercolorbox}[wd=.695\paperwidth,ht=1.85cm]{date}%
        \mbox{%
        \hspace{.6cm}%
        \ifempty{\insertlogo}{}{\insertlogo\hspace{1.2cm}}%
        \vbox{% only insert institute name if no logo is given
            \ifempty{\insertinstitute}%
                {\usebeamerfont{author}\insertauthor\par}%
                {\ifempty{\insertlogo}%
                    {\usebeamerfont{author}\insertauthor,~\usebeamerfont{institute}\insertinstitute\par}%
                    {\usebeamerfont{author}\insertauthor\par}%
                }%
            \vspace{.25cm}%
            \usebeamerfont{date}\insertdate%
            \vspace{.35cm}%
        }%
        }%
    \end{beamercolorbox}%
    \hspace{.127cm}%
    \begin{beamercolorbox}[wd=.295\paperwidth,ht=1.85cm,leftskip=.15cm]{email}%
        \vbox{%
            \usebeamerfont{email}\checkcommand\insertemail%
            \vspace{1.2cm}%
        }%
    \end{beamercolorbox}%
    }%
}

\mode<all>
