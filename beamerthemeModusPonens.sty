\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemeModusPonens}

% Provided Options -------------------------------------------------------------
% provides option "sectionsymbol" to define highlighting symbol in section
% navigation, e.g. [sectionsymbol=$\leftrightarrow$]
\RequirePackage{kvoptions}
\SetupKeyvalOptions{family=ModusPonens,prefix=ModusPonens@}
\DeclareStringOption[\hspace{0.25cm}]{sectionsymbol}[]
\DeclareDefaultOption{%
    \PackageWarning{beamerthemeModusPonens}{Unknown option `\CurrentOption'}%
}
\ProcessKeyvalOptions*

\mode<presentation>

% Required Packages and Options ------------------------------------------------
\RequirePackage{fix-cm,ragged2e,totcount,xcolor}
\PassOptionsToPackage{naturalnames}{hyperref}
\PassOptionsToPackage{unicode}{hyperref}

% Settings ---------------------------------------------------------------------
\useinnertheme{ModusPonens}
\useoutertheme{ModusPonens}

% Warnings ---------------------------------------------------------------------
\AtBeginDocument{%
    \regtotcounter{section}%
    \ifnum\totvalue{section}>5% sectionnavigation messed up if sectionnumber > 5
    \PackageWarning{beamerthemeModusPonens}%
    {Number of Sections Greater than Five}%
    \fi%
}

\mode<all>
